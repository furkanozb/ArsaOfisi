@using CoreArsaOfisi.DataLayer.Models.db
@model IEnumerable<VIlanListesi>
@{
    ViewData["Title"] = "MyAds";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <div class="my_dashboard_review mb40">
        <div class="property_table">
            <div class="table-responsive mt0">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">İlan Başlığı</th>
                            <th scope="col">Yayınlanma Tarihi</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Görüntülenme</th>
                            <th scope="col">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="feat_property list favorite_page style2">
                                        <div class="thumb">
                                            <img class="img-whp" src="~/uploads/@item.PhotoUrl" alt="@item.Title">
                                            <div class="thmb_cntnt">
                                                <ul class="tag mb0">
                                                    @if (item.IsForSale == true)
                                                    {
                                                        <li class="list-inline-item" style="background-color:#0a794d">
                                                            <a>Satılık</a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li class="list-inline-item" style="background-color:#520a79">
                                                            <a>Kiralık</a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="details">
                                            <div class="tc_content">
                                                <h4>@item.Title</h4>
                                                <p><span class="flaticon-placeholder"></span> @item.ProvinceName @item.DistrictName @item.Adress </p>
                                                <a class="fp_price text-thm" href="#">@string.Format("{0:N0}", item.Price) ₺</a>
                                            </div>
                                        </div>
                                    </div>
                                </th>
                                <td>@item.AdvertisementDate.Value.ToString("dd-MM-yyyy")</td>
                                <td>
                                    @if (item.IsApproved == true)
                                    {
                                        <span class="status_tag badge2">Onaylandı</span>
                                    }
                                    else
                                    {
                                        <span class="status_tag badge">Beklemede</span>
                                    }
                                </td>
                                <td>2,345</td>
                                <td>
                                    <ul class="view_edit_delete_list mb0">
                                        <li class="list-inline-item" data-toggle="tooltip" data-placement="top" title="Edit"><a href="#"><span class="flaticon-edit"></span></a></li>
                                        <li class="list-inline-item" data-toggle="tooltip" data-placement="top" title="Delete"><a href="#"><span class="flaticon-garbage"></span></a></li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mbp_pagination">
                <ul class="page_navigation">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true"> <span class="flaticon-left-arrow"></span> Prev</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">...</a></li>
                    <li class="page-item"><a class="page-link" href="#">29</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#"><span class="flaticon-right-arrow"></span></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


