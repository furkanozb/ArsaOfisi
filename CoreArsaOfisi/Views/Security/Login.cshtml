
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Inner Page Breadcrumb -->
<section class="inner_page_breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="breadcrumb_content">
                    <h4 class="breadcrumb_title">Giriş</h4>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Giriş</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our LogIn Register -->
<section class="our-log bgc-fa">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-6 offset-lg-3">
                <div class="login_form inner_page">

                    @using (Html.BeginForm("Login", "Security", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="heading">
                            <h3 class="text-center">Giriş yap</h3>
                            @if (TempData["rejection"] != null)
                            {
                                <p class="text-center"><a class="text-thm" href="page-register.html">@TempData["rejection"]</a></p>
                            }
                            else
                            {
                                <p class="text-center">Hesabın yok mu? <a class="text-thm" href="@Url.Action("Register","Security")">Kayıt!</a></p>
                            }
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="exampleInputEmail3" name="Mail" placeholder="E-Posta Adresi" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="exampleInputPassword4" name="Password" placeholder="Parola" required>
                        </div>
                        <div class="form-group custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="exampleCheck3">
                            <label class="custom-control-label" for="exampleCheck3">Beni Hatırla</label>
                            <a class="tdu btn-fpswd float-right" href="#">Parolamı Unuttum?</a>
                        </div>
                        <button type="submit" class="btn btn-log btn-block btn-thm2">Giriş</button>
                        <div class="divide">
                            <span class="lf_divider">Ya da</span>
                        </div>
                        <div class="row mt40">
                            <div class="col-lg">
                                <button type="submit" class="btn btn-block color-white bgc-fb mb0"><i class="fa fa-facebook float-left mt5"></i> Facebook</button>
                            </div>
                            <div class="col-lg">
                                <button type="submit" class="btn btn2 btn-block color-white bgc-gogle mb0"><i class="fa fa-google float-left mt5"></i> Google</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


